<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/text_project_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="com.example.project"
                android:textSize="14sp"
                android:textColor="@color/colorInactive"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/text_project_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last opened: Today, 2:30 PM"
                android:textSize="12sp"
                android:textColor="@color/colorInactive"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_project_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/btn_star_big_on"
            android:tint="@color/colorAccent"
            android:visibility="invisible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>